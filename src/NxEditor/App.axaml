<Application x:Class="NxEditor.App"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:comp="using:NxEditor.Components"
             xmlns:local="using:NxEditor"
             xmlns:sty="using:FluentAvalonia.Styling"
             xmlns:vm="using:NxEditor.ViewModels">
    <Application.DataTemplates>
        <comp:ViewLocator />
    </Application.DataTemplates>

    <Application.Resources>
        <FontFamily x:Key="UbuntuMono">avares://NxEditor/Assets/Fonts/UbuntuMono/#Ubuntu Mono</FontFamily>
    </Application.Resources>
    <Application.Styles>
        <sty:FluentAvaloniaTheme PreferUserAccentColor="True"
                                 TextVerticalAlignmentOverrideBehavior="EnabledNonWindows"
                                 UseSystemFontOnWindows="True" />
        <StyleInclude Source="avares://Dock.Avalonia/Themes/DockFluentTheme.axaml" />
        <StyleInclude Source="avares://NxEditor/Styles/DockFluent.axaml" />
    </Application.Styles>
</Application>
